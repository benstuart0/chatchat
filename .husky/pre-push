#!/bin/sh

echo "Running client-side linting..."
cd client && npm run lint:fix || { echo "Client linting failed"; exit 1; }

echo "Running client-side build check..."
npm run build || { echo "Client build failed"; exit 1; }

echo "Running server-side Ruff checks..."
cd ../server && source venv/bin/activate && python3 -m ruff check --fix . || { echo "Server Ruff checks failed"; exit 1; }

echo "All checks passed!"
