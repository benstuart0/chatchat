#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running client-side linting..."
cd client && npm run lint:fix || { echo "Client linting failed"; exit 1; }

echo "Running server-side Ruff checks..."
cd ../server && ruff check --fix . || { echo "Server Ruff checks failed"; exit 1; }

echo "All checks passed!"
